<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Tree view -->
		<record model="ir.ui.view" id="view_medico_tree">
			<field name="name">view_medico_tree</field>
			<field name="model">medico</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="medico">
					<field name="name" />
					<field name="apellidos" />
					<field name="dni" />
					<field name="numColegiado" />
					<field name="direccion" />
					<field name="email" />
					<field name="telefono" />
				</tree>
			</field>
		</record>

		<!-- Form view -->
		<record model="ir.ui.view" id="view_medico_form">
			<field name="name">view_medico_form</field>
			<field name="model">medico</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Medico">
					<group col="4" colspan="4">
						<field name="name" />
						<field name="apellidos" />
						<field name="dni" />
						<field name="numColegiado" />
						<field name="direccion" />
						<field name="email" />
						<field name="telefono" />
						<notebook colspan="4">
							<page string="Citas">
								<field name="cita_ids" mode="tree" nolabel="1">
									<tree>
										<field name="name" />
										<field name="numSegurSocial" />
										<field name="fechaHora" />
										<field name="matricula" />
										<field name="descripcion" />
									</tree>
								</field>
							</page>
						</notebook>
					</group>
				</form>
			</field>
		</record>

		<!-- Accion -->
		<record id="act_medico" model="ir.actions.act_window">
			<field name="name">medico</field>
			<field name="res_model">medico</field>
			<field name="view_type">form</field>
			<field name="view_model">tree,form</field>
		</record>

		<!-- Menu -->
		<menuitem id="hospital" name="Hospital" action="act_medico" />
		<menuitem id="medico" name="Medico" parent="hospital"
			sequence="100" />
		<menuitem id="medico_submenu" name="Medico" parent="medico"
			sequence="100" action="act_medico" />

	</data>
</openerp>